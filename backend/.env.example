# TrustChain Backend – copy to .env and fill

# Database (default matches docker-compose)
DATABASE_URL=postgresql://trustchain:trustchain@localhost:5432/trustchain

# JWT
JWT_SECRET=ca4ace7ebc58b7b80384782ea78dadc512d469fa

# GitHub OAuth – create app at https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Callback URL for frontend (GitHub redirects here, then frontend sends ?code= to backend)
GITHUB_CALLBACK_URL=http://localhost:3000/auth/callback

# Algorand TestNet
ALGOD_URL=https://testnet-api.algonode.cloud
ALGOD_TOKEN=
INDEXER_URL=https://testnet-idx.algonode.cloud
# Creator mnemonic (25 words) – for deploying contracts and finalize/mint. Keep secret.
CREATOR_MNEMONIC=

# Reputation ASA ID (create ASA first, then set here)
REPUTATION_ASA_ID=0

# Git clone directory (server-side)
GIT_CLONE_DIR=/tmp/trustchain_repos
